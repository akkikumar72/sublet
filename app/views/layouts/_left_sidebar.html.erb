<h4>Size</h4>

<%= search_form_for @q do |f| %>
<div style="display:none;">
  <%= f.search_field :zipcode_eq %>
  <%= f.search_field :size_lteq, value: '100' %>
</div>
<%= f.submit "< 100 sqft", style: get_custom_black_colored_class(0, 100, params[:q][:size_gteq], params[:q][:size_lteq]) %>
<% end %>


<% min_max_size = {"100" => "500", "500" => "1000", "1000" =>"2500", "2500" => "5000", "5000" => "10000" } %>
<% min_max_size.each do |item| %>
  <%= search_form_for @q do |f| %>
    <div style="display:none;">
      <%= f.search_field :zipcode_eq %>
      <%= f.search_field :size_gteq, value: item.first %>
      <%= f.search_field :size_lteq, value: item.last %>
    </div>
  <%= f.submit "#{item.first}-#{item.last} sqft", style: get_custom_black_colored_class(item.first, item.last, params[:q][:size_gteq], params[:q][:size_lteq]) %>
  <% end %>
<% end %>


